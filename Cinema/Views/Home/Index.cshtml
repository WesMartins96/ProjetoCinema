@{
    ViewData["Title"] = "Cinema";
}



<header>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/lib/Doutor2.jpg" height=500px alt="First slide">
                <h1 style="text-align: center; color:white">Doutor Estranho 2 Multiverso da Loucura</h1>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/lib/Maverick2.webp" height=500px alt="Second slide">
                <h1 style="text-align: center; color:white">Top Gun: Maverick</h1>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/lib/Sonic2.jpg" height=500px alt="Third slide">
                <h1 style="text-align: center; color:white">Sonic 2</h1>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/lib/homemDoNorte.webp" height=500px alt="Third slide">
                <h1 style="text-align: center; color:white">O Homem do Norte</h1>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</header>
