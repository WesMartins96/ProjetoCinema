@model Cinema.Models.DetalheSessao

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Detalhes Sessão</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class= "row">
              <div class= "col-md-6">
               <div class="form-group">
                <label asp-for="NumeroSala" class="control-label"></label>
                <input asp-for="NumeroSala" class="form-control" />
                <span asp-validation-for="NumeroSala" class="text-danger"></span>
               </div>
              <div class="form-group">
                <label asp-for="QuantidadeLugares" class="control-label"></label>
                <input asp-for="QuantidadeLugares" class="form-control" />
                <span asp-validation-for="QuantidadeLugares" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="HorarioId" class="control-label"></label>
                <select asp-for="HorarioId" class ="form-control" asp-items="ViewBag.HorarioId"></select>
              </div>
              <div class="form-group">
                <label asp-for="FilmeId" class="control-label"></label>
                <select asp-for="FilmeId" class ="form-control" asp-items="ViewBag.FilmeId"></select>
              </div>
              <div class="form-group">
                <label asp-for="CadeiraSelecionada" class="control-label"></label>
                <input asp-for="CadeiraSelecionada" class="form-control" />
                <span asp-validation-for="CadeiraSelecionada" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="SessaoId" class="control-label"></label>
                <select asp-for="SessaoId" class ="form-control" asp-items="ViewBag.SessaoId"></select>
              </div>
              <div class="form-group">
                <label asp-for="CompraId" class="control-label"></label>
                <select asp-for="CompraId" class ="form-control" asp-items="ViewBag.CompraId"></select>
              </div>
              <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
              </div>
             </div>
            </div>
        </form>
    
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
